# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# TransactionToken
POST          /tokens                                                    controllers.transactions.TransactionTokenController.create()
GET           /tokens/:id                                                controllers.transactions.TransactionTokenController.get(id)
DELETE        /tokens/:id                                                controllers.transactions.TransactionTokenController.delete(id)

# Charge
#GET           /charges                                                   controllers.charges.ChargeController.list(merchantId: Option[String])
POST          /charges                                                   controllers.charges.ChargeController.create()
GET           /stores/:storeId/charges                                   controllers.charges.ChargeController.list(merchantId: Option[String], storeId)
GET           /stores/:storeId/charges/:id                               controllers.charges.ChargeController.get(merchantId: Option[String], storeId, id)
#PATCH         /stores/:storeId/charges/:id                               controllers.charges.ChargeController.patch(merchantId: Option[String], storeId, id)

## Charge (admin)
GET           /merchants/:merchantId/stores/:storeId/charges             controllers.charges.ChargeController.list(merchantId: Option[String], storeId)
GET           /merchants/:merchantId/stores/:storeId/charges/:id         controllers.charges.ChargeController.get(merchantId: Option[String], storeId, id)



# Utilty routes
GET           /heartbeat                                                 controllers.HeartBeatController.beat()

