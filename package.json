    "jsdom": "~10.1.0",
    "jsdom-global": "~3.0.2",
    "nock": "~9.0.13",
    "nyc": "^10.3.2",
    "path": "~0.12.7",
    "preprocess": "^3.1.0",
    "preprocess-cli": "^0.1.0",
    "rimraf": "^2.6.1",
    "sinon": "~2.2.0",
    "sinon-chai": "~2.10.0",
    "tap-nyan": "^1.1.0",
    "ts-node": "~3.0.4",
    "tslint": "~5.2.0",
    "typescript": "^2.3.2",
    "url-search-params": "^0.8.0"
  },
  "dependencies": {
    "@types/chai": "^3.5.2",
    "@types/chai-as-promised": "^0.0.30",
    "@types/decamelize": "^0.0.30",
    "@types/form-data": "^0.0.33",
    "@types/nock": "^8.2.1",
    "@types/node": "^7.0.18",
    "@types/sinon": "^2.2.1",
    "@types/sinon-chai": "^2.7.27",
    "camel-case": "^3.0.0",
