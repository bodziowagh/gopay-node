{
    "compilerOptions": {
        "target": "es5",
        "outDir": "lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "files": [
        "typings/index.d.ts",
        "src/api/RestAPI.ts",
        "src/api/WithAPI.ts",
        "src/config.ts",
        "src/errors/CommonError.ts",
        "src/errors/RequestError.ts",
        "src/errors/ResponseError.ts",
        "src/errors/ValidationError.ts",
        "src/index.ts",
        "src/resources/Authorization.ts",
        "src/resources/CRUDResource.ts",
        "src/resources/MerchantCRUDResource.ts",
        "src/resources/merchants/Merchant.ts",
        "src/resources/stores/Store.ts",
        "src/utils/camelCase.ts",
        "src/utils/equal.ts",
        "src/utils/index.ts",
        "src/utils/isEmpty.ts",
        "src/utils/underscore.ts",
        "src/validation/Validation.ts",
        "src/validation/validators/Email.ts",
        "src/validation/validators/Required.ts",
        "src/validation/validators/UUID.ts",
        "src/validation/validators/Validator.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
